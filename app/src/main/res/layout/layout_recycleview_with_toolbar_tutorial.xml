<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tutorials_view"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorTransparent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorTransparentWhite">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.7"
            android:src="@drawable/icon_hand"/>
        <TextView
            android:id="@+id/clickMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:alpha="0.8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/scrollMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:alpha="0.8"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:alpha="0.7"
            android:src="@drawable/icon_double_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <Button
        android:id="@+id/tutorials_close_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:text="Got It"
        android:textColor="@color/colorWhite"
        android:alpha="0.65"
        android:elevation="10dp"
        android:onClick="tutorialSeen"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="124dp"></View>
</LinearLayout>