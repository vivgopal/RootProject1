<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/activity_generic_option_select"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.example.vivekgopal.project1.activities.GenericOptionSelectActivity">

    <include layout="@layout/layout_generic_header"/>

    <ScrollView
        android:id="@+id/activity_generic_option_select_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="3dp"
        android:scrollbarTrackVertical="@color/colorScrollTrack"
        android:scrollbarThumbVertical="@color/colorScrollThumb"
        >
        <LinearLayout
            android:id="@+id/activity_generic_option_select_button_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            >
        </LinearLayout>
    </ScrollView>

</LinearLayout>
