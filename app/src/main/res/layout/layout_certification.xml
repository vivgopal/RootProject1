<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/activity_certifications"
    android:background="@color/colorButtonDark"
    android:layout_margin="5dp"
    >
    <ImageView
        android:id="@+id/certification_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:alpha="0.65"
        android:src="@drawable/home_button_black"
        />
    <TextView
        android:id="@+id/certification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.9"
        android:padding="2dp"
        android:paddingLeft="20dp"
        android:text="@string/certifications"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

</LinearLayout>