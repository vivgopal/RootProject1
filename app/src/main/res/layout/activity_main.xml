<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.vivekgopal.project1.activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                app:layout_heightPercent="60%"
                android:id="@+id/home_screen_upper"
                android:background="@drawable/selector_gradient"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/myRectangleView"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_rectangle"
                    android:textColor="@color/colorScrollThumb"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:text="@string/pathxplore_logo"
                    android:elevation="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                app:layout_heightPercent="40%"
                android:orientation="vertical"
                android:id="@+id/home_screen_lower"
                android:background="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/home_screen_upper"
                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_screen_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/shape_spinner_dropdown"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_heightPercent="30%"
                app:layout_marginTopPercent="45%"
                android:elevation="10dp"
                >
                <Spinner
                    android:id="@+id/dynamic_spinner_specialization"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    style="@style/style_spinner"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_screen_spinner_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="71%"
                app:layout_heightPercent="8%"
                android:elevation="40dp"
                >
                <Button
                    android:id="@+id/home_go_button"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="@string/home_button_go"
                    android:textSize="25dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/shape_home_go_button"
                    android:elevation="40dp"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorBlack"
                ></View>

        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_main_tutorial_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</FrameLayout>