<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vivekgopal.project1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GenericOptionSelectActivity"
            android:parentActivityName=".activities.MainActivity"></activity>
        <activity
            android:name=".activities.GenericSpecializationOptionActivity"
            android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.DisplaySalaryActivity"></activity>
        <activity android:name=".activities.CareerLadderActivity"></activity>

    </application>

</manifest>