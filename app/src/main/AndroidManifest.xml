<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vivekgopal.project1">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GenericOptionSelectActivity"
            android:parentActivityName=".activities.MainActivity"></activity>
        <activity
            android:name=".activities.DisplaySpecializationOptionActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.DisplaySalariesActivity"></activity>
        <activity android:name=".activities.DisplayCareerLadderActivity"></activity>
        <activity android:name=".activities.DisplayCertificationsActivity"></activity>
        <activity android:name=".activities.GenericDbActivity"></activity>
        <activity android:name=".activities.DisplaySkillsActivity"></activity>
        <activity android:name=".activities.DisplayCompaniesActivity"></activity>
        <activity android:name=".activities.DisplayCareerTipsActivity"></activity>
        <activity android:name=".activities.DisplayCareerTipActivity"></activity>
        <activity android:name=".activities.DisplaySpecializationActivity"></activity>

    </application>

</manifest>